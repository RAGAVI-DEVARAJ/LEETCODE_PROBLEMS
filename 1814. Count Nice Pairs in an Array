#define mod 1000000007
class Solution {
public:
    int rev(int n){
        int num=0;
        while(n!=0){
            num =num*10 + n%10;
            n=n/10;
        }
        return num;
    }
    int countNicePairs(vector<int>& nums) {
        unordered_map<int,int>mpp;
        int ans=0;
        for(int i=0;i<nums.size();i++){
            ans=(ans+mpp[nums[i]-rev(nums[i])])%mod;
            mpp[nums[i]-rev(nums[i])]++;
        }
        return ans%mod;
    }
};
