class Solution {
public:
    int longestValidParentheses(string s) {
        stack<int> stk;
        int maxLen = 0;
        int start = 0;
       for (int i = 0; i < s.length(); i++) {
            if (s[i] == '(') {
                stk.push(i);
            } else {
                if (stk.empty()) {
                    start = i + 1;
                } else {
                    stk.pop();
                    if (stk.empty()) {
                        maxLen = max(maxLen, i - start + 1);
                    } else {
                        maxLen = max(maxLen, i - stk.top());
                    }
                }
            }
        }

        return maxLen;
    }
};
